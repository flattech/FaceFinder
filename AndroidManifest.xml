<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.facefinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/facefinder_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.facefinder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.facefinder.MainGallery"
            android:label="@string/title_activity_main_gallery"
            android:parentActivityName="com.example.facefinder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.facefinder.MainActivity" />
        </activity>
        <activity
            android:name="com.example.facefinder.FaceGallery"
            android:label="@string/title_activity_face_gallery" >
        </activity>
        <activity
            android:name="com.example.facefinder.ViewImage"
            android:label="@string/title_activity_view_image" >
        </activity>
        <activity
            android:name="com.example.facefinder.FaceDetails"
            android:label="@string/title_activity_face_details" >
        </activity>
    </application>

</manifest>
